@model IEnumerable<BangaFilmes.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Título
        </th>
        <th>
            Gêneros
        </th>
        <th>
           Sinopse
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PosterUrl)
        </th>
        <th>
            Data de Lançamento
        </th>
        <th>
            Título Original
        </th>
        <th>
            Duração
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
    @{
        foreach (var genre in item.Genres)
        {
              @genre.Name @:&nbsp
        }
    }
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Overview)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PosterUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Runtime)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
